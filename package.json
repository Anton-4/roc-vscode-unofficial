{
  "name": "roc-lang-unofficial",
  "version": "0.0.2",
  "icon": "resources/roc-logo.png",
  "displayName": "roc-lang-unofficial",
  "description": "Roc language support",
  "publisher": "IvanDemchenko",
  "pricing": "Free",
  "license": "MIT",
  "author": {
    "name": "Ivan Demchenko",
    "email": "idemchenko.js@gmail.com"
  },
  "engines": {
    "vscode": "^1.79.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raqystyle/roc-vscode-unofficial"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "roc",
        "aliases": [
          "Roc",
          "roc",
          "roc-lang"
        ],
        "extensions": [
          ".roc"
        ],
        "configuration": "./roc-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "roc",
        "scopeName": "source.roc",
        "path": "./syntaxes/roc.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "roc-lang-experiment.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo 'No tests for now'"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
